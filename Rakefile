require 'bundler/gem_tasks'

=begin
require 'rake'
require 'rubygems'
require 'rubygems/package_task'
require 'rake/clean'
require 'rdoc/task'

# The Gemspec info is moved into openrgss.gemspec file

Gem::PackageTask.new gemspec do |pkg|
	pkg.need_zip = true
	if RUBY_PLATFORM['mingw'] || RUBY_PLATFORM['mswin']
		pkg.zip_command = '7z a -tzip'
	end
end
=end
